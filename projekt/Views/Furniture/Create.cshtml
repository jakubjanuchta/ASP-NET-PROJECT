@model projekt.Models.Furniture;

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Add new furniture piece</h2>
<div>
    <form asp-action="Create" method="post">
        <div class="mb-3">
            <label asp-for="Label"></label>
            <input class="form-control" asp-for="Label"/>
            <span asp-validation-for="Label"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ProductionDate"></label>
            <input class="form-control" asp-for="ProductionDate"/>
            <span asp-validation-for="ProductionDate"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ImageLink"></label>
            <input class="form-control" asp-for="ImageLink"/>
            <span asp-validation-for="ImageLink"></span>
        </div>
        <div class="mb-3">
            <button class ="btn btn-primary" type="submit">Add new</button>
        </div>
    </form>
</div>
