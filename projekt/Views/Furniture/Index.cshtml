@model System.Collections.Generic.IEnumerable<projekt.Models.Furniture>

@{
    ViewData["Title"] = "List of furnitures";
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-xs-6 border-primary mb-3">
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-info">
                            <p class="card-text">
                                <h5 class="card-title">
                                    @item.Name
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <a asp-controller="Furniture" asp-action="Update" asp-route-id="@item.Id">Update</a>
                                    }
                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <img src="@item.ImageURL" width="100%" alt="@item.Name">
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            <p class="card-text"><b>Creator: </b>@item.Creator.FirstName + @item.Creator.SecondName</p>
                            <p class="card-text">
                                <b>Company: </b>@item.Company.Name
                            </p>
                            <p class="card-text">
                                <b>Category: </b>@item.Category.Name
                            </p>
                            <p class="card-text">
                                <b>Production Date: </b>@item.ProductionDate.ToString("dd MMM yy")
                            </p>
                        </div>
                    </div>

                    <div class="col-md-12">
                        <div class="card-footer ">
                            <p class="card-text">
                                <a class="btn btn-outline-primary float-right" asp-action="Details" asp-route-id="@item.Id">
                                    <i class="bi bi-eye-fill"></i> Show Details
                                </a>
                                @if (User.IsInRole("User"))
                                {
                                    <a class="btn btn-outline-primary float-right" asp-action="Buy">
                                        <i class="bi bi-eye-fill"></i> Buy
                                    </a>
                                }
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    @if (User.IsInRole("Admin"))
    {
        <div class="text-white">
            <a asp-controller="Furniture" asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Add New
            </a>
        </div>
    }
</div>