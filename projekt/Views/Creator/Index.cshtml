@model System.Collections.Generic.IEnumerable<projekt.Models.Creator>

@{
    ViewData["Title"] = "List of creators";
}


<div class="item-list creator-list">

        <table class="table">
            <thead>
            <tr class="text-center">
                <th>@Html.DisplayNameFor(model => model.FirstName)</th>
                <th>@Html.DisplayNameFor(model => model.SecondName)</th>
                <th>@Html.DisplayNameFor(model => model.Bio)</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.SecondName)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Bio)
                    </td>
                    <td class="align-middle">
                        <a class="btn btn-edit" asp-controller="Creator" asp-action="Update" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Edit </a> |
                        <a class="btn btn-details" asp-controller="Creator" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i>Details </a> |
                        <a class="btn btn-delete" asp-controller="Creator" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Delete </a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
        <div  class="text-white">
            <a asp-controller="Creator" asp-action="Create" class="btn btn-add">
                <i class="bi bi-plus-circle"></i> Add New
            </a>
        </div>
</div>